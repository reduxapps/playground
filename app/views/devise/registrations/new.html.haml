%h2.centered Sign Up
= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :email
  = f.input :password
  %div{:class => 'control-group'}
    .controls
      = f.submit "Sign Up", :class => 'btn-large btn-primary', :style => 'width: 218px;'