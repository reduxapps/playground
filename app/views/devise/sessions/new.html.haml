%h2.centered Log in
= simple_form_for resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' } do |f|
  = f.input :email
  = f.input :password
  %div{:class => 'control-group'}
    .controls
      = f.submit "Log in", :class => 'btn-large btn-primary', :style => 'width: 218px;'
